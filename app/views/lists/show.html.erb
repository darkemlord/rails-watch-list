<div class="container d-flex justify-content-center">
  <h1><%= @list.name %></h1>
</div>

<div class="container d-flex justify-content-around">
  <%= link_to 'Back Home', lists_path, class: 'btn btn-flat'%>
  <%= link_to 'Create bookmark', new_list_bookmark_path(@list), class: 'btn btn-flat'%>
</div>

<div class="container d-flex flex-wrap justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card m-3" style="width: 18rem; background-color: transparent;">
    <%= image_tag bookmark.movie.poster_url %>
      <div class="card-body">
        <h2 class="card-title"><%= bookmark.movie.title%></h2>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <p class="class-text">Rating: <%= bookmark.movie.rating %></p>
      </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item" style="background-color: transparent;">Comment: <%= bookmark.comment %></li>
    </ul>
    </div>
  <% end %>
</div>
